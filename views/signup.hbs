		<script>
			jQuery(document).ready(function() {
				Main.init();
				Login.init();

				$('#usario').on('submit', function(e){
			    e.preventDefault();
			 	let email = $('#email');
			 	let displayName = $('#displayName');
			 	let address = $('#address');
			 	let mobile = $('#mobile');
			 	let password = $('#password');

			 	$.ajax({
			 	url: '/api/signup',
			 	method: 'POST',
			 	data: {
			 		email: email.val(),
			 		displayName: displayName.val(),
			 		address: address.val(),
			 		mobile: mobile.val(),
			 		password: password.val(),
			 	},
			 	success: function(data){
                    alert("Se registro con exito");
                    location.href="/login";
                }
			 	});
			 	return false;
			 });
			});


	
